<Window
    x:Class="LogVisualizer.Views.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:customControls="clr-namespace:LogVisualizer.CustomControls;assembly=LogVisualizer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i18n="clr-namespace:LogVisualizer.I18N;assembly=LogVisualizer.I18N"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:titlebars="clr-namespace:LogVisualizer.Platforms.Windows;assembly=LogVisualizer"
    xmlns:views="clr-namespace:LogVisualizer.Views"
    xmlns:vm="using:LogVisualizer.ViewModels"
    Title="LogVisualizer"
    d:DesignHeight="1080"
    d:DesignWidth="1920"
    Icon="/Assets/logo.ico"
    mc:Ignorable="d">

    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <NativeMenu.Menu>
        <NativeMenu>
            <NativeMenuItem Header="{i18n:I18NKeyBinding Key=Menu_File}">
                <NativeMenuItem.Menu>
                    <NativeMenu>
                        <NativeMenuItem Command="{Binding MenuBar.OpenCommand}" Header="{i18n:I18NKeyBinding Key=Menu_Open}" />
                        <NativeMenuItem Command="{Binding MenuBar.ExitCommand}" Header="{i18n:I18NKeyBinding Key=Menu_Exit}" />
                    </NativeMenu>
                </NativeMenuItem.Menu>
            </NativeMenuItem>
            <NativeMenuItem Header="{i18n:I18NKeyBinding Key=Menu_View}">
                <NativeMenuItem.Menu>
                    <NativeMenu>
                        <NativeMenuItem Command="{Binding MenuBar.ShowOnlyFilteredCommand}" Header="{i18n:I18NKeyBinding Key=Menu_Show_Only_Filtered}" />
                    </NativeMenu>
                </NativeMenuItem.Menu>
            </NativeMenuItem>
            <NativeMenuItem Header="{i18n:I18NKeyBinding Key=Menu_Filter}">
                <NativeMenuItem.Menu>
                    <NativeMenu>
                        <NativeMenuItem Command="{Binding MenuBar.AddNewFilterCommand}" Header="{i18n:I18NKeyBinding Key=Menu_Add_Filter}" />
                    </NativeMenu>
                </NativeMenuItem.Menu>
            </NativeMenuItem>
            <NativeMenuItem Header="{i18n:I18NKeyBinding Key=Menu_Help}">
                <NativeMenuItem.Menu>
                    <NativeMenu>
                        <NativeMenuItem Command="{Binding MenuBar.AboutCommand}" Header="{i18n:I18NKeyBinding Key=Menu_About}" />
                    </NativeMenu>
                </NativeMenuItem.Menu>
            </NativeMenuItem>
        </NativeMenu>
    </NativeMenu.Menu>
    <Window.DataTemplates>
        <DataTemplate DataType="vm:UpgraderViewModel">
            <views:UpgraderTip />
        </DataTemplate>
    </Window.DataTemplates>
    <Grid>
        <DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <titlebars:WindowsTitleBar Name="WindowsTitleBar" DockPanel.Dock="Top" />
            <views:BottomBar DockPanel.Dock="Bottom" />
            <Grid ColumnDefinitions="250,*">
                <views:SideBar
                    Grid.Column="0"
                    Width="250"
                    DataContext="{Binding SideBar}" />
                <Grid Grid.Column="1" RowDefinitions="*,Auto,100">
                    <ListBox Grid.Row="0" ItemsSource="{Binding Items}">
                        <ListBox.Styles>
                            <Style Selector="ListBoxItem">
                                <Setter Property="Height" Value="15" />
                                <Setter Property="FontSize" Value="12" />
                                <Setter Property="Background" Value="Yellow" />
                                <Setter Property="Foreground" Value="Red" />
                            </Style>
                        </ListBox.Styles>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                        Height="15"
                                        FontSize="12"
                                        Text="{Binding Index}" />
                                    <TextBlock
                                        Height="15"
                                        FontSize="12"
                                        Text=": " />
                                    <TextBlock
                                        Height="15"
                                        FontSize="12"
                                        Text="{Binding Name}" />
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <GridSplitter
                        Grid.Row="1"
                        Height="2"
                        Background="Red" />
                    <Grid Grid.Row="2" Background="Gray" />
                </Grid>
            </Grid>
        </DockPanel>
        <customControls:SubWindow
            Title="Upgrader"
            DataContext="{Binding Upgrader}"
            IsModalDialog="True"
            IsVisible="{Binding IsVisible}"
            WindowHeight="600"
            WindowWidth="500">
            <views:Upgrader />
        </customControls:SubWindow>
    </Grid>
</Window>
