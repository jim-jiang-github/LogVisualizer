      </ListBox.ItemTemplate>
    </ListBox>-->

  <DockPanel HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch"
             Name="ContentWrapper">
    <titlebars:WindowsTitleBar Name="WindowsTitleBar" IsSeamless="True"/>
    <Grid ColumnDefinitions="50,*"
          Background="Red">
      <StackPanel Grid.Column="0"
                  Width="50">
        <Border Width="50"
                Height="50"
                Background="Yellow"/>
        <Border Width="50"
                Height="50"
                Background="Blue"/>
        <Border Width="50"
                Height="50"
                Background="YellowGreen"/>
      </StackPanel>
      <Grid Grid.Column="1"
            RowDefinitions="*,100">
        <Grid Grid.Row="0"
              ColumnDefinitions="100,*">
          <Grid Grid.Column="0"
                RowDefinitions="Auto,*"
                Background="Green">
          </Grid>
          <GridSplitter Grid.Column="1"
                        Width="2"/>
          <DataGrid Grid.Column="2"
                                   Background="#262626"
                                   Items="{Binding Items}">
            <DataGrid.Columns>
              <DataGridTemplateColumn Header="#"
                                       Width="Auto">
                <DataGridTemplateColumn.CellTemplate>
                  <DataTemplate>
                    <TextBlock Margin="0,0"
                               Height="14"
                               FontSize="10"
                               HorizontalAlignment="Right"
                               Classes="code_text"
                               Text="{Binding Data.Name}" />
                  </DataTemplate>
                </DataGridTemplateColumn.CellTemplate>
              </DataGridTemplateColumn>
              <DataGridTemplateColumn Header="#"
                                       Width="Auto">
                <DataGridTemplateColumn.CellTemplate>
                  <DataTemplate>
                    <TextBlock Margin="0,0"
                               Height="14"
                               FontSize="10"
                               HorizontalAlignment="Right"
                               Classes="code_text"
                               Text="{Binding Data.Age}" />
                  </DataTemplate>
                </DataGridTemplateColumn.CellTemplate>
              </DataGridTemplateColumn>
            </DataGrid.Columns>
          </DataGrid>
        </Grid>
        <Grid Grid.Row="1" Background="Gray"></Grid>
      </Grid>
    </Grid>
  </DockPanel>

</Window>
